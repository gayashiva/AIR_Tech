@article{abrishambafAgriculturalIrrigationScheduling2020,
  title = {Agricultural Irrigation Scheduling for a Crop Management System Considering Water and Energy Use Optimization},
  author = {Abrishambaf, Omid and Faria, Pedro and Gomes, Luis and Vale, Zita},
  year = {2020},
