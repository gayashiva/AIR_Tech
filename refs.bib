@article{soulisInvestigatingEffectsSoil2015,
  title = {Investigating the Effects of Soil Moisture Sensors Positioning and Accuracy on Soil Moisture Based Drip Irrigation Scheduling Systems},
  author = {Soulis, Konstantinos X. and Elmaloglou, Stamatios and Dercas, Nicholas},
  year = {2015},
